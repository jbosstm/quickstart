            <artifactId>connector</artifactId>
            <version>1.0</version>
            <!--<scope>test</scope>-->
        </dependency>
        <dependency>
            <groupId>org.ow2.jotm</groupId>
            <artifactId>ow2-jotm-dist</artifactId>
            <version>2.2.1</version>
